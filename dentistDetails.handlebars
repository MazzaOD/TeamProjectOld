{{!< layouts/main}}

<section class="intro">
    <div class="bg-image h-100"
        style="background-image: url(https://mdbootstrap.com/img/Photos/new-templates/glassmorphism-article/img7.jpg);">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card mask-custom">
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="{{dentist.image}}" alt="{{dentist.name}}" class="img-fluid rounded mb-3">
                                    <h2 class="card-title">{{dentist.name}}</h2>
                                    <p class="card-text">{{dentist.specialty}}</p>
                                </div>
                                <div class="text-center mt-4">
                                    <a href="/edit/{{dentist.id}}" class="btn btn-warning">Edit</a>
                                    <a href="/delete/{{dentist.id}}" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
